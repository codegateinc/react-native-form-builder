{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "rootDir": ".",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "lib/*": ["./lib/*"]
    }
  },
  "exclude": ["node_modules"]
}
